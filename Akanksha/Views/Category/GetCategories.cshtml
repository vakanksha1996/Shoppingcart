@model IEnumerable<Akanksha.Category>

@{
    ViewBag.Title = "GetCategories";
   
}
@RenderPage("~/Views/Admin/Index.cshtml ")
<div class="main" style="border:1px solid black">
    <h2>Categories</h2>

    <p>
        @Html.ActionLink("Create New", "New")
    </p>
    <table  class="table" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                   <img  src =@item.Pic width ="120" height="70" alt="no image"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                
                <td>
                    @Html.ActionLink("Edit","Edit", "Category", new { id = item.CategoryId },htmlAttributes: new { @class = "btn btn-primary" }) |

                    @Html.ActionLink("Delete","Delete", "Category", new { id = item.CategoryId },htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/DropdownInnavbar.js")"></script>
}