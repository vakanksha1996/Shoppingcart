
@model IEnumerable<Akanksha.Subcategory>

<div class="container body-content" >
    <div class="row"><h1 style="text-align:center;background-color:#ccffff">Shop By Top Categories</h1></div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3" style="height:300px">
               
                <div style="height:70%">
                    <a href="@Url.Action("GetProductsByName", "Product", new { name = item.Name })"><img src=@item.Pic class="img-responsive" style="width:100%;height:100%" alt="Image"></a>
                </div>
               
                <div style="height:30%;text-align:center">@Html.ActionLink(@item.Name, "GetProductsByName", "Product", new { name = item.Name }, new { @style = "color:#428bca" })</div>
            </div>

        }
    </div>
</div>




