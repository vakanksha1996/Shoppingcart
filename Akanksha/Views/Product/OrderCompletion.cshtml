@model Akanksha.Order

@{
    ViewBag.Title = "OrderCompletion";
}



<div class="container body-content" style="background-color:#f2f2f2">

    <div class="row" style="margin:20px 50px 20px 50px;background-color:white;padding:10px">
        <h2 style="color:forestgreen;text-align:center">Congratulations!!! Your Order is placed successfully</h2>
        <br />
        <table>
            <tr>
                <th>Payment Details:</th>
                <td></td>
            </tr>
            <tr>
                <td>Order Id:</td>
                <td>@Model.OrderId</td>
            </tr>
            <tr>
                <td>Amount Paid:</td>
                <td>@Model.Subtotal</td>
            </tr>
            <tr>
                <td>Payment Type:</td>
                <td>@Model.Payment.PaymentMode</td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            @{
                string address = Model.ShippingAddress;
                // Split authors separated by a comma followed by space
                string[] add = address.Split('\n');
            }
            <tr>
                <th>Shipping Details:</th>
                <td></td>
            </tr>
            <tr>
                <td>House No.:</td>
                <td>@add[0]</td>
            </tr>
            <tr>
                <td>Street:</td>
                <td>@add[1]</td>
            </tr>
            <tr>
                <td>City:</td>
                <td>@add[2]</td>
            </tr>
            <tr>
                <td>State:</td>
                <td>@add[3]</td>
            </tr>
            <tr>
                <td>Country:</td>
                <td>India</td>
            </tr>
            <tr>
                <td>Pincode:</td>
                <td>@add[4]</td>
            </tr>
            <tr>
                <td>PhoneNumber:</td>
                <td>@Model.AspNetUser.PhoneNumber</td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>@Model.AspNetUser.UserName</td>
            </tr>
        </table>
        <div style="float:right">@Html.ActionLink("Go To Home", "Index", "Home", null, new { @class = "btn btn-primary" })</div>

    </div>

</div>

